{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "lib": [
      "ES2015",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ES2021"
    ],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts"
  ]
}
